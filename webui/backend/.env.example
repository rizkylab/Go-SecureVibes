# Environment variables for SecureVibes Dashboard Backend

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Database Configuration
DATABASE_PATH=./data/scans.db

# Storage Configuration
OUTPUT_DIR=./output
MAX_SCAN_AGE_DAYS=90

# Authentication Configuration
JWT_SECRET=change-this-secret-in-production-please-use-a-strong-random-key
TOKEN_EXPIRY=24h

# Feature Flags
WEBSOCKET_ENABLED=true
AUTO_CLEANUP=true

# Optional: Path to config file (if using YAML config instead of env vars)
# CONFIG_PATH=config.yaml
